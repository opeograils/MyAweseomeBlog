  <header class="intro-header header1" style="">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>My Awesome Blog</h1>
                        <hr class="small">
                        <span class="subheading">I coded this blog entirely on my own.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<% @posts.each do |post| %>
<div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                        <%= link_to post.title, post_path(post) %>                        
                        </h2>
                        
                    </a>
                    <p class="post-meta"> <%= link_to "edit", edit_post_path(post) %> |
            <%= link_to "delete", post_path(post), method: :delete, data: {confirm: "Are you Sure?"} %> </p>
                </div>
                <hr>
            </div>
        </div>
</div>
<% end %>

